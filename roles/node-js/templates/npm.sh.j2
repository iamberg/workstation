addToPath() {
  case ":$PATH:" in
    *":$1:"*) :;;
    *) PATH="$PATH:$1";;
  esac
}

addToNodePath() {
  case ":$NODE_PATH:" in
    *":$1:"*) :;;
    *) NODE_PATH="$NODE_PATH:$1";;
  esac
}

addToPath "{{ npm_config_prefix }}/bin"
export NPM_CONFIG_PREFIX={{ npm_config_prefix }}
addToNodePath "{{ npm_config_prefix }}/lib/node_modules"
